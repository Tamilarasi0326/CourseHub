

@{
    ViewBag.Title = "Home Page";

}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

<!DOCTYPE html>
<html>

<head>
    <title>HTML marquee Tag</title>
</head>

<body>
    <marquee><b>"Unlock your potential, register today and pave the path to success!!!"</b></marquee>
</body>

</html>
<main>
    <section class="row" aria-labelledby="aspnetTitle">

        <head>
            <style>
                h1 {
                    text-shadow: 2px 2px white;
                }
            </style>
        </head>
        <body>

            <h1>SKILL CRAZE!!</h1>

        </body>

        <p class="lead">Elevate your skills with Skill Craze, Where learning knows no bounds! Explore, enroll, and unleash your potential today.  Join a vibrant community of learners, and embark on journey of endless growth and discovery.</p>
        <a href="@Url.Action("About", "Home")" class="btn btn-light">More Info</a>
    </section>

    <div class="row">
        <section class="col-md-4" aria-labelledby="gettingStartedTitle">
            <h2 id="adminlogin">Admin Login</h2>
            <p>
                Access the Control Center: Admins, Your Gateway Awaits!
            </p>

            <div id="myCarousel" class="carousel slide" data-ride="carousel">

                <!-- Indicators -->

                <ol class="carousel-indicators">

                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>

                    <li data-target="#myCarousel" data-slide-to="1"></li>

                    <li data-target="#myCarousel" data-slide-to="2"></li>

                    <li data-target="#myCarousel" data-slide-to="3"></li>

                </ol>

                <!-- Wrapper for slides -->

                <div class="carousel-inner">

                    <div class="item active">

                        <img src="~/image/Admin logo.jpg" width="300" height="300">

                    </div>

                    <div class="item">

                        <img src="~/image/course crud.png" width="300" height="300">

                    </div>

                    <div class="item">

                        <img src="~/image/user crud.jpg" width="300" height="300">

                    </div>
                    <div class="item">

                        <img src="~/image/enrolled list.jpg" width="300" height="300">

                    </div>

                </div>


                <!-- Left and right controls -->

                <a class="left carousel-control" href="#myCarousel" data-slide="prev">

                    <span class="glyphicon glyphicon-chevron-left"></span>

                    <span class="sr-only">Previous</span>

                </a>

                <a class="right carousel-control" href="#myCarousel" data-slide="next">

                    <span class="glyphicon glyphicon-chevron-right"></span>

                    <span class="sr-only">Next</span>

                </a>


            </div>
            <div>
                <a href="@Url.Action("Login", "Account")" class="btn btn-success">Login &raquo;</a>
            </div>
        </section>
        <section class="col-md-4" aria-labelledby="librariesTitle">
            @*<h2 id="librariesTitle">Get more libraries</h2>
        <p>NuGet is a free Visual Studio extension that makes it easy to add, remove, and update libraries and tools in Visual Studio projects.</p>
        <p><a class="btn btn-outline-dark" href="https://go.microsoft.com/fwlink/?LinkId=301866">Learn more &raquo;</a></p>*@
        </section>
        <section class="col-md-4" aria-labelledby="hostingTitle">
            <h2 id="Userlogin">User Login</h2>
            <p>Ready to Drive In? Users, Let's Make Learning Personal!</p>

            <div id="myCarousel" class="carousel slide" data-ride="carousel">

                <!-- Indicators -->

                <ol class="carousel-indicators">

                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>

                    <li data-target="#myCarousel" data-slide-to="1"></li>

                    <li data-target="#myCarousel" data-slide-to="2"></li>

                    <li data-target="#myCarousel" data-slide-to="3"></li>

                </ol>

                <!-- Wrapper for slides -->

                <div class="carousel-inner">

                    <div class="item active">

                        <img src="~/image/User logo.jpg" width="300" height="300">

                    </div>

                    <div class="item">

                        <img src="~/image/course view.jpg" width="300" height="300">

                    </div>

                    <div class="item">

                        <img src="~/image/enrolled success.jpg" width="300" height="300">

                    </div>
                    <div class="item">

                        <img src="~/image/payment sucess.jpg" width="300" height="300">

                    </div>

                </div>

                <!-- Left and right controls -->

                <a class="left carousel-control" href="#myCarousel" data-slide="prev">

                    <span class="glyphicon glyphicon-chevron-left"></span>

                    <span class="sr-only">Previous</span>

                </a>

                <a class="right carousel-control" href="#myCarousel" data-slide="next">

                    <span class="glyphicon glyphicon-chevron-right"></span>

                    <span class="sr-only">Next</span>

                </a>

            </div>
            <a href="@Url.Action("Login", "Account")" class="btn btn-success">Login &raquo;</a>

        </section>
    </div>
</main>

